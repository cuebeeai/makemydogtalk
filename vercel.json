{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": null,
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/auth/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/:path*",
      "destination": "/api/index"
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}

