# Local Development Environment Variables
# Copy this file to .env.local and fill in your local development values
# NEVER use production credentials for local development!

# Database - Use a separate local/development database
# Get free dev database at: https://neon.tech
DATABASE_URL=postgresql://user:password@localhost:5432/makemydogtalk_dev

# Google Cloud Configuration (Required for video generation)
# You can use the same project but monitor usage carefully
VERTEX_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1
SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
GCS_BUCKET_NAME=your-dev-bucket-name

# OAuth Configuration (Optional - for testing auth)
# Create separate OAuth credentials for localhost
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback

# Session Secret (Generate with: openssl rand -base64 32)
SESSION_SECRET=your-local-session-secret

# Stripe Configuration (Use test mode keys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_PRICE_ID_JUMP_LINE=price_test_...
STRIPE_PRICE_ID_THREE_PACK=price_test_...
STRIPE_WEBHOOK_SECRET=whsec_test_...

# Admin Configuration
ADMIN_EMAIL=dev@localhost

# Node Environment
NODE_ENV=development
